@model Shop.Models.CategoryViewAll

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (Model.TotalCount > 0)
{

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryViews.SingleOrDefault().Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.CategoryViews)
        {
            <tr @((Model.HighLightId.HasValue && -1 != Model.HighLightId.Value && item.Id == Model.HighLightId.Value) ? "class=popover-title" : "" )>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubCategoryId)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.SubCategoryName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

}
else
{
    <p>
        No categories found.
    </p>
}