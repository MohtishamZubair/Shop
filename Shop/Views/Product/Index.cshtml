@model Shop.Models.ProductViewAll

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (Model.TotalCount > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductViews.Single().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductViews.Single().ModelNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductViews.Single().ModelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductViews.Single().MRP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductViews.Single().Description)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.ProductViews)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModelNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModelName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MRP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}
else
{
    <p>
        No Products Found!
    </p>

}      