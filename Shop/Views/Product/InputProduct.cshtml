@model Shop.Models.ProductView

@{    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.ActionHeading</h2>

@using (Html.BeginForm(Model.ActionOfForm)) 
{

    @Html.AntiForgeryToken()
    
